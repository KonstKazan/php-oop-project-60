#!/usr/bin/env php

<?php

use Hexlet\Code\Validator;

$autoloadPath1 = __DIR__ . '/../../../autoload.php';
$autoloadPath2 = __DIR__ . '/../vendor/autoload.php';
if (file_exists($autoloadPath1)) {
    require_once $autoloadPath1;
} else {
    require_once $autoloadPath2;
}

$v = new Validator();

$fn = fn($value, $start) => str_starts_with($value, $start);
// Метод добавления новых валидаторов
// addValidator($type, $name, $fn)
$v->addValidator('string', 'startWith', $fn);

//var_dump($v->customValidator);
// Новые валидаторы вызываются через метод test
$schema = $v->string()->test('startWith', 'H');
//var_dump($v->customValidator);
var_dump($schema->isValid('exlet')); // false
var_dump($schema->isValid('Hexlet')); // true

$fn = fn($value, $min) => $value >= $min;
$v->addValidator('number', 'min', $fn);

$schema = $v->number()->test('min', 5);
var_dump($schema->isValid(4)); // false